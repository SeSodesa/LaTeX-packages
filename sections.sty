% FOR STYLING THE SECTION HEADINGS
\usepackage{sectsty}
	\chapterfont{\color{SkyBlue4}}
	\sectionfont{\color{SkyBlue4}}
	\subsectionfont{\color{SkyBlue4}}
	\subsubsectionfont{\color{SkyBlue4}}
	\paragraphfont{\color{SkyBlue4}}
	
%LABELED  SECTION HEADINGS INCLUDED IN THE TOC
% numbered sections
\NewDocumentCommand{\nchapter}{ O{\thechapter} m}{\chapter{#2}\label{cha:#1} }
\NewDocumentCommand{\nsection}{ O{\thesection} m}{\section{#2}\label{sec:#1} }
\NewDocumentCommand{\nssection}{ O{\thesubsection} m}{\subsection{#2}\label{ssec:#1} }
\NewDocumentCommand{\nsssection}{ O{\thesubsubsection} m}{\subsubsection{#2}\label{sssec:#1} }
% unnumbered sections
\NewDocumentCommand{\nanchapter}{ O{\thechapter} m }{\refstepcounter{chapter}\chapter*{#2}\addcontentsline{toc}{chapter}{#2}\label{cha:#1}}
\NewDocumentCommand{\nansection}{ O{\thesection} m }{\refstepcounter{section}\section*{#2}\addcontentsline{toc}{section}{#2}\label{sec:#1}}
\NewDocumentCommand{\nanssection}{ O{\thesubsection} m }{\refstepcounter{subsection}\subsection*{#2}\addcontentsline{toc}{subsection}{#2}\label{ssec:#1}}
\NewDocumentCommand{\nansssection}{ O{\thesubsubsection} m }{\refstepcounter{subsubsection}\subsubsection*{#2}\addcontentsline{toc}{subsubsection}{#1}\label{sssec:#2}}


