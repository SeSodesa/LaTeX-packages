% ThmTools
\declaretheoremstyle[
	spaceabove=\parsep\bigskip,
	headfont=\normalfont\bfseries,
	bodyfont=\normalfont,
	spacebelow=\parsep\bigskip
]{mystyle}

	\declaretheorem[style=mystyle,name=Aksiooma,numberwithin=section]{myaxiom}
	\declaretheorem[style=mystyle,name=Lause,sibling=myaxiom]{mytheorem}
	\declaretheorem[style=mystyle,name=Apulause,sibling=myaxiom]{mylemma}
	\declaretheorem[style=mystyle,name=Seurauslause,sibling=myaxiom]{mycorollary}
	\declaretheorem[style=mystyle,name=Määritelmä,sibling=myaxiom]{mydefinition}
	\declaretheorem[style=mystyle,name=Huomio,sibling=myaxiom]{myremark}
	
	\addto\captionsfinnish{\renewcommand\proofname{\bfseries Todistus.}}
	\addto\captionsenglish{\renewcommand\proofname{\bfseries Proof.}}
	
